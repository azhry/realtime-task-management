<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/share_list_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_blue"
            android:textColor="@android:color/white"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"
            android:paddingBottom="12dp"
            android:text="LIST TITLE" />

        <Button
            android:id="@+id/inviteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:drawablePadding="6dp"
            android:text="Invite"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/share_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:paddingLeft="24dp"
        android:paddingBottom="36dp"
        android:text="@string/list_share_title_default" />

    <TextView
        android:id="@+id/share_list_member_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Team Members" />

    <ListView
        android:id="@+id/member_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>